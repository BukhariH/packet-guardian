{{define "header"}}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='shortcut icon' type='image/png' href='/public/assets/images/favicon.png' />
        {{if eq config.Core.SiteCompanyName ""}}
        <title>{{config.Core.SiteTitle}}</title>
        {{else}}
        <title>{{config.Core.SiteTitle}} - {{config.Core.SiteCompanyName}}</title>
        {{end}}
        <link rel="stylesheet" href="/public/assets/styles/normalize.css">
        <link rel="stylesheet" href="/public/assets/styles/main.css">
        {{range .css}}
        <link rel="stylesheet" href="/public/assets/styles/{{.}}.css">
        {{end}}
    </head>
    <body>
        <header>
            <img src="/public/assets/images/logo.png">
            <div class="header-title">
                <a href="/">{{config.Core.SiteTitle}}</a>
            </div>
        </header>
        <div class="main">
            <div id="flashDiv" class="flash">
                <div id="flashText">{{.main.FlashMessage}}</div>
            </div>
{{end}}
